# .env.example - Template for environment variables
# Copy this file to .env.development or .env.production and fill in your values
# NEVER commit your actual .env files!

# Application environment (development, production, test)
NODE_ENV="development"

# Database connection string
# Example for PostgreSQL:
# postgresql://user:password@host:port/database?schema=public
# For local dev: use localhost
# For production: use your cloud DB URL (e.g., from Supabase, Neon, Railway)
DATABASE_URL="postgresql://user_postgres:pass_postgres@localhost:5432/learn_backend_course?schema=public"

# JWT secret for authentication (must be at least 32 characters, generate strong one)
# Use a secure random string, NEVER use this example value in production!
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"

# JWT token expiration time
# Examples: 1h, 7d, 30d, 1y
JWT_EXPIRES_IN="7d"